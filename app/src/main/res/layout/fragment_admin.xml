<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Admin"
        android:background="@drawable/gradient"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:layout_gravity="start"
        android:paddingLeft="20dp"
        android:textSize="22dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp">

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/circle"
            android:fontFamily="sans-serif-medium"
            android:text="DF"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="DICKY FAHRIZA"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Layanan"
        android:textColor= "@color/black"
        android:gravity="center_vertical"
        android:layout_gravity="start"
        android:paddingLeft="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp">

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/baseline_card_giftcard_24"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Kode Referral"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/baseline_arrow_forward_ios_24"
            android:gravity="center"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#cecece"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/baseline_location_on_24"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Lokasi Cabang"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/baseline_arrow_forward_ios_24"
            android:gravity="center"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#cecece"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Administrasi"
        android:textColor= "@color/black"
        android:gravity="center_vertical"
        android:layout_gravity="start"
        android:paddingLeft="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp">

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/baseline_mark_email_unread_24"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Ubah Email"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/baseline_arrow_forward_ios_24"
            android:gravity="center"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#cecece"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/baseline_lock_open_24"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Ubah kode Akses"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/baseline_arrow_forward_ios_24"
            android:gravity="center"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#cecece"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/baseline_fiber_pin_24"
            android:textSize="20sp"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Ubah mPin"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/baseline_arrow_forward_ios_24"
            android:gravity="center"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#cecece"
        android:layout_marginTop="20dp"/>
</LinearLayout>